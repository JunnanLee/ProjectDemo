        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/main_app_top_blue</item>
                <item name="colorPrimaryDark">@color/main_app_top_blue</item>
                <item name="colorAccent">@color/main_app_top_blue</item>
                <item name="windowNoTitle">true</item>

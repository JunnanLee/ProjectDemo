<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="PicTheme" parent="Theme.AppCompat.Light.NoActionBar">

                <item name="colorPrimary">@color/main_app_top_blue</item>
                <item name="colorPrimaryDark">@color/main_app_top_blue</item>
                <item name="colorAccent">@color/main_app_top_blue</item>
                <item name="android:windowTranslucentStatus">true</item>
                <item name="android:colorPrimaryDark">@color/main_app_top_blue</item>
                <item name="android:windowBackground">@android:color/transparent</item>
                <item name="android:windowContentOverlay">@null</item>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_app_top_blue</item>
        <item name="colorPrimaryDark">@color/main_app_top_blue</item>
        <item name="colorAccent">@color/main_app_top_blue</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_app_top_blue</item>
        <item name="colorPrimaryDark">@color/main_app_top_blue</item>
        <item name="colorAccent">@color/main_app_top_blue</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="DialogTransparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/half_dark_bg</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="colorPrimary">@color/out_window_bg</item>
        <item name="colorPrimaryDark">@color/out_window_bg</item>
        <item name="colorAccent">@color/out_window_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- TAB 按钮 -->
    <style name="main_tab_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#b9c0ff</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
